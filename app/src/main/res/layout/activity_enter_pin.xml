<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.naman.darwinlabstask.EnterPinActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >


        <include layout="@layout/header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/enterpin_ll_height"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_logincode1"
                android:layout_width="@dimen/circle_img_height"
                android:layout_height="@dimen/circle_img_height"
                android:layout_margin="@dimen/small_margin"
                android:background="@drawable/circleexact"
                app:civ_border_color="#000000"
                app:civ_border_width="@dimen/circle_img_border_width" />


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_logincode2"
                android:layout_width="@dimen/circle_img_height"
                android:layout_height="@dimen/circle_img_height"
                android:layout_margin="@dimen/small_margin"
                android:background="@drawable/circleexact"

                app:civ_border_color="#FF000000"
                app:civ_border_width="@dimen/circle_img_border_width" />


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_logincode3"
                android:layout_width="@dimen/circle_img_height"
                android:layout_height="@dimen/circle_img_height"
                android:layout_margin="@dimen/small_margin"
                android:background="@drawable/circleexact"
                app:civ_border_color="#FF000000"
                app:civ_border_width="@dimen/circle_img_border_width" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                android:id="@+id/img_logincode4"
                android:layout_width="@dimen/circle_img_height"
                android:layout_height="@dimen/circle_img_height"
                android:layout_margin="@dimen/small_margin"
                android:background="@drawable/circleexact"
                app:civ_border_color="#FF000000"
                app:civ_border_width="@dimen/circle_img_border_width" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/dropshadow" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/large_margin"
            android:background="@color/colorWhite"
            android:columnCount="3"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:text="1"
                android:textSize="@dimen/numeric_txt_size" />

            <Button
                android:id="@+id/btn_2"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:text="2"
                android:textSize="@dimen/numeric_txt_size" />

            <Button
                android:id="@+id/btn_3"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:text="3"
                android:textSize="@dimen/numeric_txt_size" />

            <Button
                android:id="@+id/btn_4"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:text="4"
                android:textSize="@dimen/numeric_txt_size" />

            <Button
                android:id="@+id/btn_5"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:text="5"
                android:textSize="@dimen/numeric_txt_size" />

            <Button
                android:id="@+id/btn_6"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:text="6"
                android:textSize="@dimen/numeric_txt_size" />

            <Button
                android:id="@+id/btn_7"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:text="7"
                android:textSize="@dimen/numeric_txt_size" />

            <Button
                android:id="@+id/btn_8"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:text="8"
                android:textSize="@dimen/numeric_txt_size" />

            <Button
                android:id="@+id/btn_9"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:text="9"
                android:textSize="@dimen/numeric_txt_size" />

            <Button
                android:id="@+id/btn_0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:text="0"
                android:textSize="@dimen/numeric_txt_size" />

            <Button
                android:id="@+id/btn_backspace"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:drawableLeft="@drawable/backspace"
                android:icon="@drawable/backspace"
                android:paddingLeft="@dimen/large_margin"
                android:textSize="@dimen/numeric_txt_size" />


            <Button
                android:id="@+id/btn_dot"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:text="."
                android:textSize="@dimen/numeric_txt_size"

                />
        </GridLayout>


        <ImageView
            android:id="@+id/img_forward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            android:src="@drawable/forwardchevron" />

    </LinearLayout>
</ScrollView>